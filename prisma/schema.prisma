generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   
  photo     String?  
  aikey     String?  

  brainstorms Brainstorm[]
}

model Brainstorm {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String   
  context     String   
  date        DateTime @default(now()) 
  userId      String @db.ObjectId

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  words       Word[]
}

model Word {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  word        String
  category    String
  proximity   Int
  brainstormId String @db.ObjectId

  brainstorm  Brainstorm @relation(fields: [brainstormId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model ErrorLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  message   Json
  date      DateTime @default(now())
}